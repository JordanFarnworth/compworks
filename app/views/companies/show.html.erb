

<div class="container">
  <div class="row center">
    <h1><%= @company.name %></h1>
    <p><em><%= @company.doctor_name %></em></p>
  </div>

  <div role="tabpanel">

    <div class="btn-group btn-group-justified" role="group">
      <a href="#inventory_items" class="btn btn-primary" role=button data-toggle="tab">Inventory Items</a>
      <a href="#company"class="btn btn-info" role=button data-toggle="tab">Company Info</a>
      <a href="#service_logs"class="btn btn-primary" role=button data-toggle="tab">Service Logs</a>
    </div>


    <div class="tab-content">
      <div role="tabpanel" class="tab-pane" id="inventory_items">
        <div class="center edit-icon"><h2><a href="#" id="add-inventory-item"><i class="fa fa-plus fa-4"></i></a></h2></div>
        <table class="table table-hover company-info-tables">
          <thead>
            <th>ID</th>
            <th>Computer Name</th>
            <th>Hard Drive</th>
            <th>Operating System</th>
            <th>Processor</th>
            <th>Ram</th>
            <th>Log-Me-In</th>
            <th> </th>
            <th> </th>
          </thead>
          <tbody id="inventory-data">

          </tbody>
        </table>
      </div>

      <div role="tabpanel" class="tab-pane" id="service_logs">
        <div class="center edit-icon"><h2><a href="#" id="add-service-log"><i class="fa fa-plus fa-4"></i></a></h2></div>
        <table class="table table-hover company-info-tables">
          <thead>
            <th>ID</th>
            <th>Date</th>
            <th>Length</th>
            <th>Service Performed</th>
            <th>Notes</th>
            <th> </th>
            <th> </th>
          </thead>
          <tbody id="service-log-data">


          </tbody>
        </table>
      </div>

      <div role="tabpanel" class="tab-pane active" id="company">
        <div id="company-info">

        </div>
      </div>
    </div>

  </div>

</div>

  <%= render 'scriptstore' %>
  <%= render 'companymodals' %>

</div>
