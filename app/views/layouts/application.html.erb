<!DOCTYPE html>
<html>
<head>
  <title>Cworks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


<script type="text/javascript">
    ENV = {
        current_user: <%= logged_in? ? @current_user.id : nil %>,
    };
</script>
</head>
<body class="<%= params[:controller] %> <%= params[:action] %>">

<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Commpworks</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav">
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
            <li class="dropdown">
              <a type="button" class="dropdown-toggle" aria-expanded="true" data-toggle="dropdown" href="#">
                <%= @current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My Profile', user_path(@current_user) %></li>
                <li><%= link_to 'Logout', login_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to 'Login', login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<%= flash_messages %>
<%= yield %>

</body>
</html>
